# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET       /                                com.tuplejump.playYeoman.Yeoman.index

# Authentication
POST      /signUp                          controllers.auth.SignUp.signUp
#POST      /signIn                          controllers.CredentialsAuthControllers.authenticate

GET 	    /api/stickies                    controllers.Sticky.getAllStickies
# GET	  /users                             controllers.Application.getUsers
# POST	/users						                 controllers.Application.createUser

# Dynamic part of the url
GET       /views/$template<.+>.html        controllers.Application.view(template)

# Map static resources from the /public folder to the /assets URL path
GET       /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

->        /                               yeoman.Routes